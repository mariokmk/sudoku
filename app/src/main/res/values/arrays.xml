    <string-array name="grid_styles">
        <item>Standard</item>
        <item>Squiggly</item>
    </string-array>

    <!-- The possible extra regions (used by "Start New Game") -->
    <string-array name="extra_regions">
        <item>No extra regions</item>
        <item>X-Sudoku</item>
        <item>Hyper-Sudoku</item>
        <item>Percent-Sudoku</item>
        <item>Color-Sudoku</item>
    </string-array>

